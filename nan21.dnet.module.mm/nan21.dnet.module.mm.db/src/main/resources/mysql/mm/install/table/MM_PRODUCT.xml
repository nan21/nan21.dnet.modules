<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="amathe" id="TBL">
        <createTable tableName="MM_PRODUCT">
			<column name="ACTIVE" type="int(1)">
				<constraints nullable="false" /></column>	 
			<column name="CLIENTID" type="bigint(3)">
				<constraints nullable="false" /></column>	 
			<column name="CODE" type="varchar(32)">
				<constraints nullable="false" /></column>	 
			<column name="CREATEDAT" type="datetime">
				<constraints nullable="false" /></column>	 
			<column name="CREATEDBY" type="varchar(32)">
				<constraints nullable="false" /></column>	 
			<column name="DESCRIPTION" type="text(400)">
				<constraints  /></column>	 
			<column name="DIMDEPTH" type="decimal(12,2)">
				<constraints  /></column>	 
			<column name="DIMHEIGHT" type="decimal(12,2)">
				<constraints  /></column>	 
			<column name="DIMWIDTH" type="decimal(12,2)">
				<constraints  /></column>	 
			<column name="ICONURL" type="varchar(255)">
				<constraints  /></column>	 
			<column name="ID" type="bigint(19)">
				<constraints nullable="false" /></column>	 
			<column name="IMAGEURL" type="varchar(255)">
				<constraints  /></column>	 
			<column name="MANUFACTURERPRODUCTNO" type="varchar(32)">
				<constraints  /></column>	 
			<column name="MODIFIEDAT" type="datetime">
				<constraints nullable="false" /></column>	 
			<column name="MODIFIEDBY" type="varchar(32)">
				<constraints nullable="false" /></column>	 
			<column name="NAME" type="varchar(255)">
				<constraints nullable="false" /></column>	 
			<column name="NOTES" type="text(4000)">
				<constraints  /></column>	 
			<column name="SHOWINCATALOG" type="int(1)">
				<constraints nullable="false" /></column>	 
			<column name="STORABLE" type="int(1)">
				<constraints nullable="false" /></column>	 
			<column name="UUID" type="varchar(36)">
				<constraints  /></column>	 
			<column name="VERSION" type="bigint(19)">
				<constraints nullable="false" /></column>	 
			<column name="VOLUME" type="decimal(12,2)">
				<constraints  /></column>	 
			<column name="WEIGHT" type="decimal(12,2)">
				<constraints  /></column>	 
			<column name="ATTRIBUTEGROUP_ID" type="number(19)">	 
				<constraints  /></column>	 
			<column name="DEFAULTUOM_ID" type="number(19)">	 
				<constraints  /></column>	 
			<column name="DIMUOM_ID" type="number(19)">	 
				<constraints  /></column>	 
			<column name="MANUFACTURER_ID" type="number(19)">	 
				<constraints  /></column>	 
			<column name="VOLUMEUOM_ID" type="number(19)">	 
				<constraints  /></column>	 
			<column name="WEIGHTUOM_ID" type="number(19)">	 
				<constraints  /></column>	 
        </createTable>
    </changeSet>    
    <changeSet author="amathe" id="PK">
    	<addPrimaryKey tableName="MM_PRODUCT" constraintName="PK_PRODUCT" columnNames="ID" />
    </changeSet>       
	<changeSet author="amathe" id="UK-1">
		<addUniqueConstraint tableName="MM_PRODUCT" constraintName="UK_PRODUCT1" columnNames="CLIENTID, CODE" />
	</changeSet>
	<changeSet author="amathe" id="UK-2">
		<addUniqueConstraint tableName="MM_PRODUCT" constraintName="UK_PRODUCT2" columnNames="CLIENTID, NAME" />
	</changeSet>
	<changeSet author="amathe" id="SEQ">
		<insert tableName="SEQUENCE">
		    <column name="SEQ_NAME" value="MM_PRODUCT_SEQ"/>
		    <column name="SEQ_COUNT" valueNumeric="0"/>
		</insert>
	</changeSet>
</databaseChangeLog>
